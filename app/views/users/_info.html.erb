<%= attachment_image_tag user, :profile_image,  :fill, 60, 60, fallback: "no_image.jpg", size:"62x62" %>
<%= link_to "詳細", user_list_path(user) %>
<table class = "table">
  <tbody>
    <tr>
       <th>name</th>
       <th><%= user.name%></th>
    </tr>
    <tr>
       <th>Introduction</th>
       <th><%= user.introduction %></th>
    </tr>
    <tr>
      <td>フォロワー数：</td>
      <td>
        <%= link_to user_follower_path(user) do %>
        <%= user.followers.count %>
        <% end %>
        </td>
    </tr>
    <tr>
      <td>フォロー数：</td>
      <td>
        <%= link_to user_followed_path(user) do %>
        <%= user.followings.count %>
        <% end %>
        </td>
    </tr>
    <% if user != current_user %>
    <tr>
       <% if current_user.following?(user) %>
        <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-primary" %>
      <% else %>
        <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-success" %>
      <% end %>
    </tr>
    <% end %>
       <td><%= link_to edit_user_path(user.id) do %>
          <%= image_tag('setting.jpg', size: '40x30') %>
        <% end %>
       </td>

  </tbody>
  </table>

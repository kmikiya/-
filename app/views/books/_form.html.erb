 
  <%= form_with model:book,url: books_path, method: :post, local:true do |f| %> <!-- url: books_path, method: :post, -->
<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control book_title" %>
</div>   
<div class="form-group"> 
  <%= f.label :opinion %>
  <%= f.text_area :body, class: "form-control book_title" %>
</div>   
<div class="form-group"> 
  <%= f.submit "create" %>
</div>  
<% end %>
